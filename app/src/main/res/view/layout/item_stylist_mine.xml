<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_280"
        android:paddingRight="@dimen/dp_1"
        android:paddingLeft="@dimen/dp_1"
        android:background="@drawable/shape_bg_white_button"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200">

            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/meizi" />

            <TableRow
                android:id="@+id/tr_location_distance"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_text_bg7"
                android:gravity="right|center_vertical"
                android:minWidth="@dimen/dp_60"
                android:paddingRight="@dimen/dp_4"
                android:visibility="visible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:src="@drawable/icon_location_gray" />

                <TextView
                    android:id="@+id/tv_location_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:text="0m"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />
            </TableRow>
        </RelativeLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:ellipsize="end"
                android:maxEms="4"
                android:maxLines="1"
                android:singleLine="true"
                android:text="艾米"
                android:textColor="@color/color_343434"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_professor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/shape_text_bg5"
                android:paddingEnd="@dimen/dp_3"
                android:paddingStart="@dimen/dp_3"
                android:singleLine="true"
                android:text="总监"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5">

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/rating_bar"
                android:isIndicator="true"
                app:mrb_secondaryProgressTint="@color/color_FFA200"
                app:mrb_progressTint="@color/color_FFA200"
                style="@style/Widget.MaterialRatingBar.RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_16"
                android:layout_gravity="center_vertical"
                android:rating="0" />

            <TextView
                android:id="@+id/tv_grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:gravity="end"
                android:singleLine="true"
                android:text="00分"
                android:textColor="@color/color_FFA200"
                android:textSize="@dimen/sp_12" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5">

            <TextView
                android:id="@+id/tv_maxSalesItem"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxEms="5"
                android:singleLine="true"
                android:text="洗剪吹138元"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:gravity="end"
                android:singleLine="true"
                android:text="(月接单/210)"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_12" />
        </TableRow>
    </LinearLayout>
</layout>
